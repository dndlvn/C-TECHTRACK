<Page x:Class="accounting.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="TECHTRACK" Height="811" Width="1030"
      Background="#121212">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="UsersDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#282828"
                  Foreground="Black"
                  BorderBrush="#8A2BE2"
                  GridLinesVisibility="Vertical"
                  AlternatingRowBackground="#333333"
                  SelectionChanged="UsersDataGrid_SelectionChanged" FontSize="22">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#6A0DAD"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Код пользователя" Binding="{Binding КодПользователя}" Foreground="Black"/>-->
                <DataGridTextColumn Header="Имя пользователя" Binding="{Binding ИмяПользователя}" Foreground="Black"/>
                <DataGridTextColumn Header="Фамилия пользователя" Binding="{Binding ФамилияПользователя}" Foreground="Black"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Логин}" Foreground="Black"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Пароль}" Foreground="Black"/>
                <DataGridTextColumn Header="Электронная почта" Binding="{Binding ЭлектроннаяПочта}" Foreground="Black"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Роли.НазваниеРоли}" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Имя пользователя:" Foreground="White" Grid.Row="0" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}"/>

            <Label Content="Фамилия пользователя:" Foreground="White" Grid.Row="1" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="LastNameTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}"/>

            <Label Content="Логин:" Foreground="White" Grid.Row="2" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="LoginTextBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}"/>

            <Label Content="Пароль:" Foreground="White" Grid.Row="3" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="PasswordTextBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}"/>

            <Label Content="Электронная почта:" Foreground="White" Grid.Row="4" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="EmailTextBox" Grid.Row="4" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}"/>

            <Label Content="Роль:" Foreground="White" Grid.Row="5" Grid.Column="0" FontSize="18"/>
            <ComboBox x:Name="RoleComboBox"  BorderThickness="1.5" Grid.Row="5" Grid.Column="1" SelectionChanged="RoleComboBox_SelectionChanged" />
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10" Width="450">
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click" Style="{StaticResource VioletButtonStyle}" Height="33" Width="88" FontSize="18"/>
            <Button x:Name="logButton" Content="История" Click="logButton_Click" Style="{StaticResource VioletButtonStyle}" Height="33" Width="88" FontSize="18"/>
            <Button x:Name="UpdateButton" Content="Изменить" Click="UpdateButton_Click" Style="{StaticResource VioletButtonStyle}" Width="74" FontSize="18"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Style="{StaticResource VioletButtonStyle}" Width="68" FontSize="18"/>
            <Button Content="Выйти" Click="Button_Click" Style="{StaticResource VioletButtonStyle}" Width="68" FontSize="18"/>
            
        </StackPanel>
        
    </Grid>
</Page>