<Page x:Class="accounting.EmployePage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Title="TECHTRACK" Height="811" Width="1770" Background="#121212">
    <Grid Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="EquipmentDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Background="#282828" Foreground="Black" BorderBrush="#8A2BE2" GridLinesVisibility="Vertical" AlternatingRowBackground="#333333" SelectionChanged="EquipmentDataGrid_SelectionChanged" Margin="35,0,35,47" FontSize="22" RenderTransformOrigin="0.569,0.52">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#6A0DAD"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название оборудования" Binding="{Binding НазваниеОборудования}" Foreground="Black"/>
                <DataGridTextColumn Header="Тип оборудования" Binding="{Binding ТипОборудования}" Foreground="Black"/>
                <DataGridTextColumn Header="Серийный номер" Binding="{Binding СерийныйНомер}" Foreground="Black"/>
                <DataGridTextColumn Header="Дата покупки" Binding="{Binding ДатаПокупки, StringFormat=d}" Foreground="Black"/>
                <DataGridTextColumn Header="Cостояние оборудования" Binding="{Binding СостояниеОборудования.Состояние}" Foreground="Black"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Поставщики.НазваниеПоставщика}" Foreground="Black"/>
                <DataGridTextColumn Header="Местоположение" Binding="{Binding Местоположение}" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox x:Name="SortComboBox"  Margin="326,437,1194,6" FontSize="18" SelectionChanged="SortComboBox_SelectionChanged">
            <ComboBoxItem Content="Все" IsSelected="True"/>
            <ComboBoxItem Content="Ноутбуки"/>
            <ComboBoxItem Content="Сканеры"/>
            <ComboBoxItem Content="Принтеры"/>
        </ComboBox>
        <Grid Grid.Row="1" Margin="326,10,-276,10" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Название оборудования:" Foreground="White" Grid.Row="0" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="НазваниеОборудованияTextBox" Grid.Row="0" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Тип оборудования:" Foreground="White" Grid.Row="1" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="ТипОборудованияTextBox" Grid.Row="1" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Серийный номер:" Foreground="White" Grid.Row="2" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="СерийныйНомерTextBox" Grid.Row="2" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Дата покупки:" Foreground="White" Grid.Row="3" Grid.Column="0" FontSize="18"/>
            <DatePicker x:Name="ДатаПокупкиDatePicker" Grid.Row="3" Style="{StaticResource ModernDatePickerStyle}" FontSize="18" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Состояние оборудования:" Foreground="White" Grid.Row="4" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="КодСостояниеОборудованияTextBox" Grid.Row="4" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Поставщик:" Foreground="White" Grid.Row="5" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="КодПоставщикаTextBox" Grid.Row="5" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
            <Label Content="Местоположение:" Foreground="White" Grid.Row="6" Grid.Column="0" FontSize="18"/>
            <TextBox x:Name="МестоположениеTextBox" Grid.Row="6" Style="{StaticResource ModernTextBoxStyle}" Grid.ColumnSpan="2" Margin="258,2,1010,2"/>
        </Grid>
        <Button Content="Выйти" Background="#8A2BE2" HorizontalAlignment="Left" Margin="1612,0,0,0" VerticalAlignment="Top" Click="Button_Click" FontWeight="Bold" Height="38" Width="123" FontSize="20"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="641,10,0,10" Width="338">
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click" Style="{StaticResource VioletButtonStyle}" FontSize="18"/>
            <Button x:Name="UpdateButton" Content="Изменить" Click="UpdateButton_Click" Style="{StaticResource VioletButtonStyle}" FontSize="18"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Style="{StaticResource VioletButtonStyle}" FontSize="18"/>
            <Button x:Name="ExportToExcel" Content="Отчет" Click="ExportToExcel_Click" Style="{StaticResource VioletButtonStyle}" FontSize="18" Width="65"/>
        </StackPanel>
    </Grid>
</Page>