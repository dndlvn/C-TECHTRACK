<Window x:Class="accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TECHTRACK" 
        Height="400" 
        Width="300"
        Background="#121212"
        SizeToContent="Manual" ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        >

    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8A2BE2" Offset="0.0"/>
                <GradientStop Color="#4B0082" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Cursor="">
            <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин" Foreground="White" Margin="0,0,0,5"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                <TextBox Name="log" Height="44" 
                         Padding="10" FontSize="14" 
                         Background="#FFFFFF" Foreground="Black"/>
            </Border>
            <TextBlock Text="Пароль" Foreground="White" Margin="0,0,0,5"/>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5">
                <PasswordBox x:Name="pass" Height="45" 
                             Padding="10" FontSize="14" 
                             Background="#FFFFFF" Foreground="Black"/>
            </Border>
            <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,20,0,0">
                <Button x:Name="submit" Content="Войти" Height="35" 
                        FontSize="14" Background="#8A2BE2" Foreground="White" 
                        BorderBrush="Transparent" Click="submit_Click" />
            </Border>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"  />
    </Grid>

</Window>